<h1>Reset Password</h1>

<%= form_with url: reset_password_path, local: true do |form| %>
  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= form.submit "Send me reset password instructions" %>
  </div>
<% end %>

<%= link_to "Back to login", login_path %>
