<div class="container my-5" style='font-size: 0.9em;'>
  <div class="row d-flex justify-content-center">
    <div class="col-10 card shadow-sm card-body bg-light">
      <h4 class="mb-4" style="font-size: 1.7em;">Register for <strong style="color: #f1536a; font-size: 1.3em;">EnableID</strong></h4>      
      <div class="alert alert-warning">
        <h6><strong>Note:</strong></h6>
        <p style="font-size:0.9em;">You can only register for an EnableID account once. All UnityPass account requests are final and cannot be cancelled or re-submitted.</p>
      </div>
      <%= render "devise/shared/error_messages", resource: resource %>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "p-4 col-8", style: "font-size:0.8em;") do |f| %>
          <div class="form-group">
            <%= f.label :username, class: "form-label" do %>
              Username (Please ensure you can remember this)
              <span class="text-danger">*</span>
            <% end %>
            <%= f.text_field :username, autofocus: true, class: "form-control", required: true %>
          </div>
          <div class="form-group">
            <%= f.label :password, class: "form-label" do %>
              Password (Please ensure you can remember this)
              <span class="text-danger">*</span>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, class: "form-label" do %>
              Password confirmation
              <span class="text-danger">*</span>
            <% end %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true %>
          </div>
          <div class="form-group">
            <%= f.label :email, class: "form-label" do %>
              Email
              <span class="text-danger">*</span>
            <% end %>
            <%= f.text_field :email, class: "form-control", required:true %>
          </div>
          <div class="form-group">
            <%= f.label :phone_number, class: "form-label" do %>
              Contact number
              <span class="text-danger">*</span>
            <% end %>
            <%= f.text_field :phone_number, class: "form-control", required:true %>
          </div>
          <div class="d-flex justify-content-center">
            <%= link_to "Cancel", root_path, class: "btn btn-secondary mr-4" %>
            <%= f.submit "Register", class: "btn btn-danger" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
