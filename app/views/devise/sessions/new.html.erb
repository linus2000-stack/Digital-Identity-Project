<div class='container-fluid h-100 flex-grow-1 d-flex justify-content-center align-items-center'>
  <div class="row w-100 -100 d-flex justify-content-around align-items-center">
    <div class="col-lg-4 mx-0 col-12 d-flex align-items-center justify-content-center my-3">
        <%= image_tag 'fingerprint.svg', width: 100, height: 100, alt: 'EnableID Logo', class: 'd-none d-lg-block' %>     
        <div class="text-center text-nowrap px-2">
        <strong style="color: #f1536a; font-size:4rem;">EnableID</strong>
        <div>Restore Dignity by Empowering Identity</div>
      </div>
    </div>
    <div class="col-lg-4 col-12 mx-0 w-100 container-fluid d-flex align-items-center justify-content-center", style="max-width: 500px; min-width: 270px;">
        <div class="card shadow-sm card-body">
            <% if flash[:alert] %>
              <div class="alert alert-danger" role="alert">
                <%= flash[:alert] %>
              </div>
            <% end %>
                <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-3" }) do |f| %>
                <div class="form-group">
                    <%= f.label :login, "Log in EnableID", class: "form-label" %>
                    <%= f.text_field :login, class: "form-control", placeholder: "Email/Phone Number/Username", required: true %>
                </div>
                <div class="form-group">
                    <%= f.label :password, class: "form-label" %>
                    <%= f.password_field :password, class: "form-control", required: true %>
                </div>
                <%= f.submit "Log in", class: "btn btn-primary btn-block", style: "background-color: #0072bc;" %>
                <%= link_to "I am a NGO", ngo_users_path, class: "w-100 btn btn-danger" %>
                <% end %>
                <div class="row justify-content-center align-items-center my-3 g-2">
                    <div class="col-auto d-flex justify-content-center">
                    <a href="<%= new_user_password_path %>">Forgot your password</a>
                    </div>
                    <div class="col-auto d-flex justify-content-center">
                    <a href="<%= new_user_registration_path %>" class="btn btn-outline-secondary">Register for EnableID</a>
                    </div>
                </div>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
