<div class="alert alert-warning" role="alert">
  <strong>Alert!</strong>
  <p>A fake email is circulating. Or any other alert message that should be shared</p>
</div>
<div class="bg-light d-flex flex-column align-items-center">
  <div class="row justify-content-around p-5 w-100">
    <div class="col-sm d-flex align-items-center justify-content-center my-3">
      <img src="/assets/fingerprint.svg" width="100" height="100" alt="EnableID Logo" />
      <div class="text-center text-nowrap px-2">
        <strong style="color: #f1536a; font-size: 4rem;">EnableID</strong>
        <div>Restore Dignity by Empowering Identity</div>
      </div>
    </div>
    <div class="col-sm"></div>
    <div class="col-sm d-flex align-items-center justify-content-center">
      <div class="container-fluid bg-light d-flex align-items-center justify-content-center" style="max-width: 500px; min-width: 270px;">
        <div class="card shadow-sm card-body">
          <div class="tab-content" id="loginTabContent">
            <div class="tab-pane fade show active" id="password-login" role="tabpanel" aria-labelledby="password-login-tab">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-3" }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                <div class="mb-3">
                  <%= f.label :login, "Log in", class: "form-label" %>
                  <%= f.text_field :login, class: "form-control", placeholder: "Email/Phone Number/Username", required: true %>
                </div>
                <div class="mb-3">
                  <%= f.label :password, class: "form-label" %>
                  <%= f.password_field :password, class: "form-control", required: true %>
                </div>
                <div class="d-grid gap-2">
                  <%= f.submit "Log in", class: "btn btn-primary btn-block", style: "background-color: #0072bc;" %>
                </div>
                <div class="d-grid gap-2">
                  <%= link_to "I am an NGO", new_ngo_user_path, class: "btn btn-danger" %>
                </div>
              <% end %>
              <div class="row justify-content-around align-items-center py-3">
                <div class="col-sm align-items-center text-center text-nowrap my-2">
                  <a href="<%= new_user_password_path %>">Forgot your password</a>
                </div>
                <div class="col-sm align-items-center text-center text-nowrap my-2">
                  <a href="<%= new_user_registration_path %>" class="btn btn-outline-secondary">Register for Digital ID</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
