<% if resource.errors.any? %>
  <div class="alert alert-danger align-content-center justify-content-center" id="error_explanation" data-turbo-cache="false">
    <ul class="m-0">
      <% resource.errors.full_messages.each do |message| %>
        <li style='font-size:0.9em;'><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>