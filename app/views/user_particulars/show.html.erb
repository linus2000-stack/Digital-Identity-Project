<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile Page</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <%= stylesheet_link_tag 'homebuttons', media: 'all', 'data-turbolinks-track': 'reload' %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <% if @user_particular.present? %>
    <script>
      $(document).ready(function() {
        // When the modal is opened
        $('#verificationWarningModal').on('shown.bs.modal', function () {
        $('body').css('overflow', 'hidden'); // Prevent scrolling when modal is open
        });
        // When the modal is closed
        $('#verificationWarningModal').on('hidden.bs.modal', function () {
        $('body').css('overflow', 'hidden'); // Re-enable scrolling when modal is closed
        });
        $('#generate-2fa-btn').click(function(e) {
          e.preventDefault();
          console.log('HELLO');
          $.ajax({
            url: '<%= generate_2fa_path(@user_particular) %>',
            type: 'POST',
            dataType: 'json',
            headers: {
              'X-CSRF-Token': $('meta[name="csrf-token"]').attr('content')
            },
            success: function(data) {
              $('#two-fa-passcode').text(data.two_fa_passcode);
            },
            error: function(xhr, status, error) {
              console.error('AJAX Error:', status, error);
            }
          });
        });
      });
    </script>
  <% end %>
</head>
<body class="container">
  <%# Start of EnableID card partial and filling in/edit button%>
  <div class="alert alert-info text-center my-1">
    Make sure to fill in your particulars correctly before being verified by a NGO admin!
  </div>
  <%# <h1 class="text-center rounded mt-3">Your <strong style="color: #f1536a;">EnableID</strong></h1> %>
  <div class="row">
    <!-- Left Side (Digital ID, 2FA, Buttons) -->
    <div class="col-md-4">
      <!-- Digital ID Card Container -->
      <div class="card mb-3 digital-card">
        <%= render 'digitalid' %>
      </div>
      <!-- 2FA Container -->
      <div class="card mb-3 digital-card">
        <div class="card-body d-flex justify-content-center align-items-center h-100">
          <button id="generate-2fa-btn" class="generate-2fa-button">Generate 2FA Passcode:</button>
          <span id='two-fa-passcode' class='two-fa-passcode-input'><%= @user_particular&.two_fa_passcode || "2FA Passcode is not set up." %></span>
        </div>
      </div>
      <!-- Buttons Container -->
      <div class="card mb-3 digital-card">
        <div class="card-body" style="background-color: #fdc6cf;">
          <div class="buttonhome-container">
            <% if @user&.nil? %>
            <% else %>
              <%= link_to user_document_path(@user), class: 'customhome-button', style: 'text-decoration: none;' do %>
                <i class="fas fa-file-alt"></i> Documents
              <% end %>
              <%= link_to user_history_path(@user), class: 'customhome-button', style: 'text-decoration: none;' do %>
                <i class="fas fa-history"></i> Activity History
              <% end %>
              <%= link_to new_user_particular_path, class: "customhome-button", id: "fill-in-particulars-btn", style: 'text-decoration: none;' do %>
                <i class="fas fa-user"></i> Personal
              <% end %>
              <% if @user_particular&.status == 'verified' %>
                <%= link_to edit_user_particular_path(@user), class: 'customhome-button', style: 'text-decoration: none;' do %>
                  <i class="fas fa-user"></i> Personal
                <% end %>
              <% else %>
                <%= link_to edit_user_particular_path(@user), class: 'customhome-button', style: 'text-decoration: none;' do %>
                  <i class="fas fa-user"></i> Personal
                <% end %>
              <% end %>
            <% end %>
            <%= link_to user_particulars_family_path, class: 'customhome-button', style: 'text-decoration: none;' do %>
              <i class="fas fa-users"></i> Family
            <% end %>
            <%= link_to user_particulars_family_path, class: 'customhome-button', style: 'text-decoration: none;' do %>
              <i class="fas fa-save"></i> Saved Post
            <% end %>
            <%= link_to user_particulars_family_path, class: 'customhome-button', style: 'text-decoration: none;' do %>
              <i class="fas fa-search"></i> Search NGOs
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-1"></div>
    <!-- Right Side (Bulletin Board) -->
    <div class="col-md-7">
      <%= render 'bulletin' %>
    </div>
  </div>
