<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile Page</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
  <%# Start of EnableID card partial and filling in/edit button%>
  <h1 class="text-center rounded py-1 mt-5">Your <strong style="color: #f1536a;">EnableID</strong></h1>
  <%= render 'digitalid' %>
  <% if @user_particular.nil? %>
    <div class="d-flex justify-content-center my-3">
      <%= link_to "Fill in your particulars to get your Digital ID!", new_user_particular_path, class: "btn btn-danger", id: "fill-in-particulars" %>
    </div>
  <% else %>
    <div class="d-flex justify-content-center my-3">
      <%= link_to "Edit", edit_user_particular_path(@user_particular), class: "btn btn-danger" %>
    </div>
  <% end %>
  <%# End of EnableID card partial and filling in/edit button%>