<div id="bulletin" class="d-flex flex-column pri-container container add-small-shadow my-2 h-100 w-100 p-3 pb-3" style='max-height: 80vh;'>
  <h3 class='text-center'>Bulletin Board</h3>
  <div class="row mb-4">
    <div class="col d-flex justify-content-between align-items-center">
      <div class="input-group bg-dark search-bar py-2 px-2" style='border-radius: 40px;'>
        <span class="input-group-text bg-dark border-0 text-white" style="font-size: 1em;">
          <i class="fas fa-bars"></i>
        </span>
        <input type="search" class="form-control bg-dark text-white border-0" id="search-input" placeholder="Search Post" aria-label="Search" aria-describedby="search-addon" style="font-size: 1em;"/>
        <span class="input-group-text bg-dark border-0 text-white" style="font-size: 1em;">
          <i class="fas fa-search"></i>
        </span>
      </div>
    </div>
  </div>
  <div class="d-flex flex-column flex-grow-1 overflow-auto" style="overflow-x: hidden;">
    <div class="d-flex flex-wrap overflow-auto" style='max-height: 100%;' id="event-cards-container">
      <% @bulletins.each do |bulletin| %>
        <span class="mb-4 mr-2 event-card justify-content-center align-items-center" style="width:250px;" data-title="<%= bulletin.title.downcase %>" data-description="<%= bulletin.description.downcase %>" data-ngo-name="<%= bulletin.ngo_name.downcase %>">
          <div class="card d-flex add-small-shadow justify-content-center">
            <div class='d-flex w-100 align-items-center justify-content-center' style='min-width: 150px; height: 150px'>
              <% ngo_user = @ngo_users.find { |user| user.name == bulletin.ngo_name } %>
              <% if ngo_user&.image_url.present? %>
                <%= image_tag ngo_user.image_url, alt: "#{ngo_user.name} image", style: 'max-width: 100%; max-height: 100%; object-fit: contain;' %>
              <% else %>
                <%= image_tag 'default.png', alt: "Event image", style: 'max-width: 100%; max-height: 100%; object-fit: contain;' %>
              <% end %>
            </div>
            <div class="card-body p-2" style="font-size: 1em;">
              <ul class="list-unstyled">
                <div class='d-flex justify-content-between'>
                  <div>
                    <h6 class="card-title" style="font-size: 1.2em;"><%= bulletin.title %></h6>
                    <li>Date: <%= bulletin.date ? bulletin.date.strftime("%d %B %Y") : "Date not available" %></li>
                  </div>
                  <%= link_to '#', onclick: 'toggleSavePost(this)', style: 'text-decoration: none;' do %>
                    <i style='text-decoration: none; color: black;' class="bi bi-bookmark fs-2"></i>
                  <% end %>
                </div>
                <li>Location: <%= bulletin.location %></li>
                <p class='truncate-multiline'>Information: <%= bulletin.description %></p>
              </ul>
              <div class="mt-3 d-flex justify-content-between align-items-center" style="font-size: 0.9em;">
                <small class="text-muted"><%= bulletin.ngo_name %></small>
                <small class="text-muted"><%= time_ago_in_words(bulletin.created_at) %> ago</small>
              </div>
            </div>
          </div>
        </span>
      <% end %>
    </div>
  </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
  $(document).ready(function() {
    $('#search-input').on('input', function() {
      var searchQuery = $(this).val().toLowerCase();
      $('.event-card').each(function() {
        var title = $(this).data('title');
        var description = $(this).data('description');
        var ngoName = $(this).data('ngo-name');
        if (title.includes(searchQuery) || description.includes(searchQuery) || ngoName.includes(searchQuery)) {
          $(this).show();
        } else {
          $(this).hide();
        }
      });
    });
  });
</script>
<script>
  function toggleSavePost(element) {
    // Toggle the 'saved' class or perform an action
    element.querySelector('i').classList.toggle('bi-bookmark-fill');
    element.querySelector('i').classList.toggle('bi-bookmark');

    // Optionally, you can make an AJAX call to save the post on the server
