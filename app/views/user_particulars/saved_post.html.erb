<%- if flash[:notice] %>
    <div class="alert alert-info text-center"><%= flash[:notice] %></div>
<% end %>
<div class='mt-3 row d-flex align-items-center justify-content-center h-100'>
    <div class="col-md-8 col-11 px-0 mx-0 d-flex justify-content-center custom-max-height">
        <% unless @bulletins.empty? %>
            <%= render 'bulletin' %>
        <% end %>
    </div>
</div>

<style>
    @media (min-width: 992px) {
        .custom-max-height {
            max-height: 75vh;
        }
    }
</style>