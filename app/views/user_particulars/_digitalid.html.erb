<div class="container px-5" id="digitalcard">
  <div class="card mx-auto border border-danger rounded" style="max-width: auto; border-width: 10px;">
    <div class="card-body d-flex flex-column flex-md-row">
      <div class="flex-shrink-0 mb-3 mb-md-0" style="width: 25%;">
        <div class="border border-dark rounded w-100 h-100"></div>
      </div>
      <div class="ms-md-3 flex-grow-1 row">
        <div class="col-md-6 mb-3 mb-md-0">
          <ul class="list-group list-group-flush">
            <li class="list-group-item text-nowrap"><strong>Full Name:</strong> <%= @user_particular&.full_name || "" %></li>
            <li class="list-group-item text-nowrap"><strong>Gender:</strong> <%= @user_particular&.gender || "" %></li>
            <li class="list-group-item text-nowrap"><strong>Ethnicity:</strong> <%= @user_particular&.ethnicity || "" %></li>
            <li class="list-group-item text-nowrap"><strong>Religion:</strong> <%= @user_particular&.religion || "" %></li>
          </ul>
        </div>
        <div class="col-md-5 mb-3 mb-md-0">
          <ul class="list-group list-group-flush">
            <li class="list-group-item text-nowrap"><strong>Country of Origin:</strong> <%= @user_particular&.country_of_origin || "" %></li>
            <li class="list-group-item text-nowrap"><strong>Date of Birth:</strong> <%= @user_particular&.date_of_birth ? @user_particular.date_of_birth.strftime("%d-%m-%Y") : "" %></li>
            <li class="list-group-item text-nowrap"><strong>Date of Arrival:</strong> <%= @user_particular&.date_of_arrival ? @user_particular.date_of_arrival.strftime("%d-%m-%Y") : "" %></li>
            <li class="list-group-item text-nowrap"><strong>Phone Number:</strong> <%= "+#{@user_particular&.full_phone_number&.gsub('-', '') || ''}" %></li>
          </ul>
        </div>
      </div>
    </div>
    <div class="card-footer text-muted d-flex justify-content-between">
      <% if @user_particular.nil? %>
        <span>EnableID - Pending your action</span>
      <% else %>
        <% if @user_particular.status == 'pending' %>
          <span>EnableID - Pending verification from an NGO <i class="bg-danger p-1 fas fa-check text-white"></i></span>
          <span>EnableID Unique Identifier: <%= @user_particular.unique_id %></span>
        <% elsif @user_particular.status == 'verified' %>
          <span>EnableID - Verified by <%= @user_particular.verifier_ngo %> <i class="bg-success p-1 fas fa-check text-white"></i></span>
          <span>EnableID Unique Identifier: <%= @user_particular.unique_id %></span>
        <% else %>
          <span>EnableID - Pending verification from an NGO</span>
          <span>EnableID Unique Identifier: <%= @user_particular.unique_id %></span>
        <% end %>
      <% end %>
    </div>
  </div>
</div>