<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Page</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* Existing styles */
        body {
            font-family: Arial, sans-serif;
            margin: 10;
            padding: 10;
        }

        /* Profile buttons styles */
        .profile-buttons-container {
            background-color: #F8F9FA;
            color: #000;
            text-align: center;
            padding: 20px;
        }

        .profile-buttons-container h2 {
            font-size: 25px;
            margin-bottom: 10px;
            color: #000;
        }

        .profile-buttons-container p {
            font-size: 20px;
            color: #000;
            margin-bottom: 20px;
        }

        .profile-buttons-container .grid {
            display: grid;
            grid-template-columns: repeat(3, minmax(0,1fr));
            gap: 10px; /* Adjust gap between items */
            justify-items: center; /* Center grid items */
            max-width: 600px;
            margin: 0 auto;
        }

        .profile-buttons-container .grid-item {
            background-color: #fff;
            border-radius: 10px;
            width: 150px; /* Fixed width */
            height: 150px; /* Fixed height to make it square */
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            transition: background-color 0.3s;
            text-decoration: none; /* Remove underline from links */
            border: 2px solid #F1536A; /* Add border with pinkish-red color */
        }

        .profile-buttons-container .grid-item:hover {
            background-color: #000;
            color: #fff;
        }

        .profile-buttons-container .grid-item i {
            font-size: 24px;
            color: #F1536A;
        }

        .profile-buttons-container .grid-item span {
            font-size: 14px;
            color: #F1536A;
            margin-top: 10px;
        }

        @media (max-width: 768px) {
            .profile-buttons-container .grid {
                grid-template-columns: repeat(3, 1fr); /* Adjust to 2 columns layout for smaller screens */
                gap: 10px; /* Reduces the gap between items for smaller screens */
            }

            .profile-buttons-container .grid-item {
                width: 100px; /* Adjust width for smaller screens */
                height: 100px; /* Adjust height for smaller screens */
            }
        }

        @media (max-width: 480px) {
            .profile-buttons-container .grid {
                grid-template-columns:  repeat(3, 1fr);; /* Adjust to 1 column layout for smallest screens */
                gap: 10px; /* Further reduces the gap between items for smallest screens */
            }

            .profile-buttons-container .grid-item {
                width: 100px; /* Adjust width for smallest screens */
                height: 100px; /* Adjust height for smallest screens */
            }
        }
    </style>
</head>
<body>
    <div class="container p-5">
        <h1 class="text-center rounded py-1">Your <strong style="color: #f1536a;">EnableID</strong></h1>
        <div class="card mx-auto border border-danger rounded" style="max-width: auto; border-width: 10px;">
            <div class="card-body d-flex flex-column flex-md-row"> 
                <div class="flex-shrink-0 mb-3 mb-md-0" style="width: 25%;">
                    <div class="border border-dark rounded w-100 h-100"></div> 
                </div>

                <div class="ms-md-3 flex-grow-1 row">
                    <div class="col-md-6 mb-3 mb-md-0">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item text-nowrap"><strong>Full Name:</strong></li>
                            <li class="list-group-item text-nowrap"><strong>Gender:</strong> </li>
                            <li class="list-group-item text-nowrap"><strong>Ethnicity:</strong></li>
                            <li class="list-group-item text-nowrap"><strong>Religion:</strong> </li>
                        </ul>
                    </div>
                    <div class="col-md-5 mb-3 mb-md-0">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item text-nowrap"><strong>Country of Origin:</strong> </li>
                            <li class="list-group-item text-nowrap"><strong>Date of Birth:</strong> </li>
                            <li class="list-group-item text-nowrap"><strong>Date of Arrival:</strong> </li>
                            <li class="list-group-item text-nowrap"><strong>Phone Number:</strong> </li>
                        </ul>
                    </div>
                    <div class="col-md-1 text-md-center">
                        <div class="d-flex flex-column align-items-center">
                            <div class="bg-danger rounded-circle p-3 mb-4"><i class="fas fa-check text-white"></i></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer text-muted d-flex justify-content-between">
                <span>UnityPass - Pending your action</span>
            </div>
        </div>
        <div class="d-flex justify-content-center my-3">
            <%= link_to "Fill in your particulars to get your Digital ID!", new_user_particular_path, class: "btn btn-danger" %>
        </div>
    </div>

    <!-- Profile buttons section -->
    <div class="profile-buttons-container">
        <h2>My Profile</h2>
        <p></p>
        <div class="grid">
            <a href="#" class="grid-item">
                <i class="fas fa-folder"></i>
                <span>Documents</span>
            </a>
            <a href="#" class="grid-item">
                <i class="fas fa-user"></i>
                <span>Personal</span>
            </a>
            <a href="#" class="grid-item">
                <i class="fas fa-dollar-sign"></i>
                <span>Finance</span>
            </a>
            <a href="#" class="grid-item">
                <i class="fas fa-car"></i>
                <span>Vehicle & Driving License</span>
            </a>
            <a href="#" class="grid-item">
                <i class="fas fa-users"></i>
                <span>Family</span>
            </a>
            <a href="#" class="grid-item">
                <i class="fas fa-briefcase"></i>
                <span>Education</span>
            </a>
            <a href="#" class="grid-item">
                <i class="fas fa-home"></i>
                <span>Property</span>
            </a>
            <a href="#" class="grid-item">
                <i class="fas fa-vote-yea"></i>
                <span>Registers of Electors</span>
            </a>
            <a href="#" class="grid-item">
                <i class="fas fa-award"></i>
                <span>NS Benefits</span>
            </a>
        </div>
    </div>
</body>
