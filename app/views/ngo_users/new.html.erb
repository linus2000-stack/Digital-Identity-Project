<div class="container" style="padding: 15px;">
  <div class="row mb-4">
    <div class="col-12">
      <form method="get" action="<%= new_ngo_user_path %>" style="display: flex; align-items: center; justify-content: space-between;">
        <input type="text" name="search" class="form-control" placeholder="Search for NGOs..." value="<%= params[:search] %>" style="flex-grow: 1; margin-right: 10px;">
        <button type="submit" class="btn btn-primary" style="flex-shrink: 0;">Search</button>
      </form>
    </div>
  </div>
  
  <div class="row" style="margin-top: 20px;">
    <% @ngo_users.each do |ngo_user| %>
      <div class="col-sm-6 col-md-4 col-lg-3" style="padding: 10px;"> <!-- Adjusted grid settings for better responsiveness -->
        <%= link_to ngo_user_path(ngo_user.id), class: 'card-link' do %>
          <div class="card" style="height: 300px; width: 100%; display: flex; flex-direction: column; overflow: hidden;">
            <div style="height: 70%; width: 100%; display: flex; align-items: center; justify-content: center; overflow: hidden;">
              <% if ngo_user.image_url.present? %>
                <%= image_tag ngo_user.image_url, alt: "#{ngo_user.name} image", style: 'max-height: 100%; max-width: 100%; object-fit: cover;' %>
              <% else %>
                <%= image_tag 'default.png', alt: "Default image", style: 'max-height: 100%; max-width: 100%; object-fit: cover;' %>
              <% end %>
            </div>
            <div class="card-body" style="height: 30%; width: 100%; display: flex; align-items: center; justify-content: center; text-align: center;">
              <h5 class="card-title" style="font-size: 1rem;"> <%= ngo_user.name %> </h5> <!-- Responsive text size -->
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<style>
  /* Responsive text adjustments */
  @media (max-width: 768px) {
    .card-title {
      font-size: 0.9rem; /* Smaller text on smaller devices */
    }
  }
</style>
