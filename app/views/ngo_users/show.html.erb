<div class="container px-5 d-flex" style="align-items: center; display: flex; padding-top: 10px;"> <!-- Use flexbox for alignment -->
  <div style="flex: 1; display: flex; justify-content: center; align-items: center;"> <!-- Center logo horizontally and vertically -->
    <%= image_tag @ngo_user.image_url, alt: "#{@ngo_user.name} image", style:"width: 250px; height: 250px; object-fit: contain;" %>
  </div>
  <div style="flex: 3; padding-left: 20px;"> <!-- Content on the right, with padding -->
    <h2 class="mb-4 mt-4">Hello, <%= @ngo_user.name %></h2>
    <%= form_with url: check_user_ngo_user_path(@ngo_user), method: :post, local: true do |form| %>
      <div class="mb-3">
        <%= form.label :unique_id, "Unique ID" %>
        <%= form.text_field :unique_id, value: params[:unique_id], class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= form.label :two_fa_passcode, "Enter 2FA Code" %>
        <%= form.text_field :two_fa_passcode, value: params[:two_fa_passcode], class: "form-control" %>
      </div>
      <%= form.submit "Check", class: "btn btn-success" %>
    <% end %>
    <%- if flash[:notice]%>
      <div class="alert alert-info text-center"><%=flash[:notice]%></div>
    <%- elsif flash[:alert]%>
      <div class="alert alert-warning text-center"><%=flash[:alert]%></div>
    <% end %>
  </div>
</div>
